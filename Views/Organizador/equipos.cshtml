@model IEnumerable<SportSync.Models.Equipo>
@{
    ViewData["Title"] = "SportSyncSoftware Organizador";
    Layout = "Organizador/_LayoutPanelOrganizador";
}

<main class="content">
    <div class="container-fluid p-0">
        <div class="d-flex justify-content-between align-items-center">
            <h3 class="fw-bold">Equipos</h3>
            <div class="d-flex nav-card">
                <a href="#" class="me-3 card-link">
                    Futbol <i class="fa-solid fa-futbol"></i>
                </a>
                <a href="#" class="me-3 card-link">
                    Basketball <i class="fa-solid fa-basketball"></i>
                </a>
                <a href="#" class="me-3 card-link">
                    Volleyball <i class="fa-solid fa-volleyball"></i>
                </a>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <div class="input-group flex-nowrap form-search">
                            <span class="input-group-text" id="addon-wrapping">
                                <i class="fa-solid fa-magnifying-glass"></i>
                            </span>
                            <input type="text"
                                   class="form-control form-xx"
                                   placeholder="Buscar equipo" />
                        </div>
                    </div>
                    <div class="card-body align-self-center">
                    </div>
                    <div class="row">

                        @foreach (var equipo in Model)
                        {
                            <div class="col-md-6">
                                <div class="card mb-3 shadown-card" style="max-width: 540px">
                                    <div class="row g-0">
                                        <div class="col-md-5 p-2">
                                            <!-- Asegúrate de que la ruta de la imagen sea correcta para cada equipo -->
                                            <img src="~/img/torneos/torneo2.jpeg" class="img-fluid img-torneos" alt="Imagen del equipo" />
                                        </div>
                                        <div class="col-md-7">
                                            <div class="card-body">
                                                <h5 class="card-title">@equipo.Nombre</h5>

                                                <p>Categoría: @equipo.Categoria</p>


                                                <a type="button" class="btn btn-primary btn-sm" asp-controller="Organizador" asp-action="GestionarEquipo" asp-route-id="@equipo.IdEquipo">
                                                    Gestionar
                                                </a>
                                                <form asp-controller="Organizador" asp-action="EliminarEquipo" method="post" style="display:inline;">
                                                    <input type="hidden" name="equipoId" value="@equipo.IdEquipo" />
                                                    <button type="submit" class="btn btn-danger btn-sm">
                                                        Eliminar
                                                    </button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="button-floating p-4">
        <button class="btn btn-primary"
                data-bs-toggle="modal"
                data-bs-target="#agregarEquipo">
            <i class="fa-solid fa-circle-plus m-2"
               style="color: #ffffff; font-size: medium"></i>Nuevo equipo
        </button>
    </div>
    <!-- Modal -->
    <div class="modal fade"
         id="agregarEquipo"
         tabindex="-1"
         aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-lg">
            <div class="modal-content rounded-0">
                <div class="modal-header bg-azul rounded-0 text-white">
                    <h1 class="modal-title fs-5 text-white">Agregar equipo</h1>
                    <button type="button"
                            class="btn-close btn-close-white"
                            data-bs-dismiss="modal"
                            aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form action="" class="p-">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Imagen:</label>
                                    <input class="form-control form-control"
                                           id="formFileSm"
                                           type="file"
                                           required />
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Categoria:</label>
                                    <select class="form-select"
                                            aria-label="Default select example">
                                        <option selected>Selecciona categoria</option>
                                        <option value="1">Femenino</option>
                                        <option value="2">Infantil</option>
                                        <option value="3">Profesional</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Nombre del equipo:</label>
                                    <label for=""></label>
                                    <input type="text" class="form-control" required />
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Deporte:</label>
                                    <select class="form-select"
                                            aria-label="Default select example">
                                        <option selected>Selecciona un deporte</option>
                                        <option value="1">Futbol</option>
                                        <option value="2">Basketball</option>
                                        <option value="3">Volleyball</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <h4 class="mb-4">Información del coache:</h4>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Imagen:</label>
                                    <input class="form-control form-control"
                                           id="formFileSm"
                                           type="file"
                                           required />
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Apellido paterno:</label>
                                    <input class="form-control form-control"
                                           id="formFileSm"
                                           type="text"
                                           required />
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Correo electronico:</label>
                                    <label for=""></label>
                                    <input type="email" class="form-control" required />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Nombre:</label>
                                    <input type="text" class="form-control" required />
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Apellido materno:</label>
                                    <input class="form-control form-control"
                                           id="formFileSm"
                                           type="text"
                                           required />
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Contraseña:</label>
                                    <div class="input-group mb-3">
                                        <input type="text"
                                               class="form-control"
                                               aria-describedby="basic-addon2"
                                               id="password"
                                               maxlength="12" />
                                        <button class="input-group-text btn btn-primary"
                                                id="generar">
                                            Generar
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="mt-3 text-md-end">
                            <button type="button"
                                    class="btn btn-danger rounded-0"
                                    data-bs-dismiss="modal">
                                Cancelar
                            </button>
                            <button type="submit" class="btn btn-primary">
                                Continuar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</main>


<script>
    document.getElementById("generar").addEventListener("click", function () {
        var caracteres =
            "ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789!#$%^&*()_+{}[]|:;<>,.?/~";
        var longitud = 12;
        var contraseña = "";
        for (var i = 0; i < longitud; i++) {
            contraseña += caracteres.charAt(
                Math.floor(Math.random() * caracteres.length)
            );
        }
        document.getElementById("password").value = contraseña;

        // Copiar al portapapeles
        var copyText = document.getElementById("password");
        copyText.select();
        copyText.setSelectionRange(0, 99999); // Para dispositivos móviles
        document.execCommand("copy");
    });
</script>

