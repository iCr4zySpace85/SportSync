        <main class="content">
          <div class="container-fluid p-0">
            <!-- BREADCRUMB -->
            <nav class="fw-bold">
              <ol class="breadcrumb">
                <li class="breadcrumb-item">
                  <a href="../index.html">Torneos</a>
                </li>
                <li class="breadcrumb-item">
                  <a href="crearTorneo.html">Crear torneo</a>
                </li>
                <li class="breadcrumb-item">
                  <a href="reglas.html">Reglas del torneo</a>
                </li>
                <li class="breadcrumb-item">
                  <a href="agregarEquipos.html">Equipos participantes</a>
                </li>
                <li class="breadcrumb-item active">Gestionar partidos</li>
              </ol>
            </nav>
            <!-- ---------- -->
            <div class="row">
              <div class="col-12">
                <div class="card">
                  <div class="card-header text-center">
                    <h3 class="fw-bold">Gestionar partidos</h3>
                  </div>
                  <div class="card-body">
                    <table class="table table-striped display" id="equipos">
                      <thead>
                        <tr>
                          <th>#</th>
                          <th>Equipo local</th>
                          <th>Equipo visitante</th>
                          <th>Arbitro</th>
                          <th>Lugar</th>
                          <th>Status</th>
                          <th>Hora</th>
                          <th>Fecha</th>
                          <th>Acciones</th>
                        </tr>
                      </thead>
                      <tbody>
                        <tr>
                          <th scope="row">1</th>
                          <td>Mark</td>
                          <td></td>
                          <td></td>
                          <td></td>
                          <td></td>
                          <td></td>
                          <td></td>
                          <td>
                            <button class="btn btn-primary fw-bold">
                              Editar
                            </button>
                            <button class="btn btn-danger fw-bold">
                              Eliminar
                            </button>
                          </td>
                        </tr>
                        <tr>
                          <th scope="row">2</th>
                          <td>Jacob</td>
                          <td></td>
                          <td></td>
                          <td></td>
                          <td></td>
                          <td></td>
                          <td></td>
                          <td>
                            <button class="btn btn-primary fw-bold">
                              Editar
                            </button>
                            <button class="btn btn-danger fw-bold">
                              Eliminar
                            </button>
                          </td>
                        </tr>
                        <tr>
                          <th scope="row">3</th>
                          <td>Larry the Bird</td>
                          <td></td>
                          <td></td>
                          <td></td>
                          <td></td>
                          <td></td>
                          <td></td>
                          <td>
                            <button class="btn btn-primary fw-bold">
                              Editar
                            </button>
                            <button class="btn btn-danger fw-bold">
                              Eliminar
                            </button>
                          </td>
                        </tr>
                      </tbody>
                    </table>

                    <div class="mt-3 text-md-end">
                      <a class="btn btn-danger" href="../index.html">
                        Cancelar
                      </a>
                      <a class="btn btn-primary" href="../index.html">
                        Terminar<i
                          class="ms-2 fa-solid fa-angle-right"
                          style="color: #ffffff"
                        ></i>
                      </a>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <div class="button-floating p-4">
              <button
                class="btn btn-primary"
                data-bs-toggle="modal"
                data-bs-target="#gestionar"
              >
                <i
                  class="fa-solid fa-circle-plus m-2"
                  style="color: #ffffff; font-size: medium"
                ></i
                >Nuevo partido
              </button>
            </div>
          </div>
        </main>
        <!-- Modal agregar regla-->
        <div class="modal fade" id="gestionar" tabindex="-1" aria-hidden="true">
          <div class="modal-dialog modal-dialog-centered modal-lg">
            <div class="modal-content rounded-0">
              <div class="modal-header bg-azul rounded-0 text-white">
                <h1 class="modal-title fs-5 text-white">Agregar partido</h1>
                <button
                  type="button"
                  class="btn-close btn-close-white"
                  data-bs-dismiss="modal"
                  aria-label="Close"
                ></button>
              </div>
              <div class="modal-body">
                <form action="" class="p-">
                  <div class="row">
                    <div class="col-md-6">
                      <div class="mb-3">
                        <label class="form-label">Fecha:</label>
                        <input
                          class="form-control form-control"
                          id="formFileSm"
                          type="date"
                          required
                        />
                      </div>
                      <div class="mb-3">
                        <label class="form-label">Equipo local:</label>
                        <select
                          class="form-select"
                          aria-label="Default select example"
                        >
                          <option selected>Selecciona equipo</option>
                          <option value="1">Pumas</option>
                          <option value="2">Barcelona</option>
                          <option value="3">Chivas</option>
                        </select>
                      </div>
                      <div class="mb-3">
                        <label class="form-label">Arbitro:</label>
                        <label for=""></label>
                        <input type="text" class="form-control" required />
                      </div>
                    </div>
                    <div class="col-md-6">
                      <div class="mb-3">
                        <label class="form-label">Hora:</label>
                        <label for=""></label>
                        <input type="text" class="form-control" required />
                      </div>
                      <div class="mb-3">
                        <label class="form-label">Equipo visitante:</label>
                        <select
                          class="form-select"
                          aria-label="Default select example"
                        >
                          <option selected>Selecciona equipo</option>
                          <option value="1">Puebla</option>
                          <option value="2">Real madrid</option>
                          <option value="3">America</option>
                        </select>
                      </div>
                      <div class="mb-3">
                        <label class="form-label">Lugar:</label>
                        <label for=""></label>
                        <input type="text" class="form-control" required />
                      </div>
                    </div>
                  </div>

                  <div class="mt-3 text-md-end">
                    <button
                      type="button"
                      class="btn btn-danger rounded-0"
                      data-bs-dismiss="modal"
                    >
                      Cancelar
                    </button>
                    <button
                      type="submit"
                      class="btn btn-primary"
                      href="reglas.html"
                    >
                      Agregar
                    </button>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>

        <footer class="footer">
          <div class="container-fluid">
            <div class="row text-muted">
              <div class="col-6 text-start">
                <p class="mb-0">
