    <script src="../js/app.js"></script>
    <script>
      $(document).ready(function () {
        $("#equipos").DataTable({
          language: {
            search: "Buscar:",
            info: "Mostrando _START_ a _END_ de _TOTAL_ registros", // Cambia el texto
            infoFiltered: "(filtrados de _MAX_ registros en total)", // Cambia el texto
            emptyTable: "No se encontraron registros",
            lengthMenu: "Mostrar _MENU_ filas por página",
          },
          paging: true,
          processing: true,
          autoWidth: false,
          rowReorder: true,
          paging: true,
        });
      });
    </script>
