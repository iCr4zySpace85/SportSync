@model SportSync.Models.ViewModels.PageInfoViewModel

@{
    var idEquipo = ViewBag.IdEquipo;
}

<!-- Segundo navbar -->
@await Html.PartialAsync("~/Views/Shared/Partials/_navbarPageMainEquipo.cshtml")

<main class="p-5">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-8 p-3">
                <div class="shadow-lg bg-body rounded p-4">
                    <div class="pb-4">
                        <strong>Jugadores</strong>
                    </div>
                    <table class="table table-striped table-responsive">
                        <thead>
                            <tr>
                                <th>Foto</th>
                                <th>Nombre</th>
                                <th>Edad</th>
                                <th>Número de jugador</th>
                                <th>Posición</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var jugador in Model.Jugadores)
                            {
                                <tr>
                                    <td class="image-jugador">
                                        @if (jugador.ImgJugador != null)
                                        {
                                            <img src="@($"data:image/jpeg;base64,{Convert.ToBase64String(jugador.ImgJugador)}")" alt="Foto de @jugador.Nombre" />
                                        }
                                        else
                                        {
                                            <img src="https://via.placeholder.com/90" alt="Foto de @jugador.Nombre" />
                                        }
                                    </td>
                                    <td>@jugador.Nombre</td>
                                    <td>@jugador.Edad</td>
                                    <td>@jugador.Numero</td>
                                    <td>@jugador.Posicion</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Columna de noticias -->
            @await Html.PartialAsync("~/Views/Shared/Partials/_cardPageMainNoticias.cshtml")
                    <!--fin cards -->
               
            <!-- fin Columna de noticias -->
        </div>
    </div>
</main>
