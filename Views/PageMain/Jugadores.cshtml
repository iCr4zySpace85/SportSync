@model SportSync.Models.ViewModels.PageInfoViewModel

@{
    var idEquipo = ViewBag.IdEquipo;
}

<!-- Segundo navbar -->
@await Html.PartialAsync("~/Views/Shared/Partials/_navbarEquipo.cshtml")

<main class="p-5">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-8 p-3">
                <div class="shadow-lg bg-body rounded p-4">
                    <div class="pb-4">
                        <strong>Jugadores</strong>
                    </div>
                    <table class="table table-striped table-responsive">
                        <thead>
                            <tr>
                                <th>Foto</th>
                                <th>Nombre</th>
                                <th>Edad</th>
                                <th>Número de jugador</th>
                                <th>Posición</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var jugador in Model.Jugadores)
                            {
                                <tr>
                                    <td class="image-jugador">
                                        @if (jugador.ImgJugador != null)
                                        {
                                            <img src="@($"data:image/jpeg;base64,{Convert.ToBase64String(jugador.ImgJugador)}")" alt="Foto de @jugador.Nombre" />
                                        }
                                        else
                                        {
                                            <img src="https://via.placeholder.com/90" alt="Foto de @jugador.Nombre" />
                                        }
                                    </td>
                                    <td>@jugador.Nombre</td>
                                    <td>@jugador.Edad</td>
                                    <td>@jugador.Numero</td>
                                    <td>@jugador.Posicion</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Columna de noticias -->
            <div class="col-md-4 p-3">
                @foreach (var noticia in Model.Noticias)
                {
                    <!-- cards -->
                    <div class="container-fluid p-3 border border-dark mb-3">
                        <div class="card rounded-0">
                            <div class="ratio ratio-16x9">
                                <iframe src="https://www.youtube.com/embed/DgdD5rUozew?si=O1REZp9SKbyK84uh"
                                        title="YouTube video player"
                                        frameborder="0"
                                        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
                                        referrerpolicy="strict-origin-when-cross-origin"
                                        allowfullscreen></iframe>
                            </div>
                            <div class="card-body">
                                <h5 class="card-title">@noticia.Titulo</h5>
                                <p class="card-text">
                                    @noticia.Contenido
                                </p>
                                <p class="card-text">
                                    <small class="text-muted">Publicado el @noticia.FechaPublicacion.ToString("MMMM dd, yyyy")</small>
                                </p>
                            </div>
                        </div>
                    </div>
                    <!--fin cards -->
                }
            </div>
            <!-- fin Columna de noticias -->
        </div>
    </div>
</main>
