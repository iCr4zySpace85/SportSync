@model SportSync.Models.ViewModels.PageInfoViewModel

@{
    var idEquipo = ViewBag.idEquipo;
}

<!-- Segundo navbar -->
@await Html.PartialAsync("~/Views/Shared/Partials/_navbarTorneo.cshtml")

<main class="p-5">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-8 p-3">
                <div class="shadow-lg bg-body rounded p-4">
                    <div class="input-group pb-4">
                        <strong>Pr√≥ximos partidos</strong>
                    </div>
                    <!-- Cards fila -->
                    <div class="row">
                        @foreach (var partido in Model.Partidos)
                        {
                            <div class="col-md-6">
                                <div class="card">
                                    <div class="card-body card-partidos">
                                        <div class="image-container">
                                            <img src="https://via.placeholder.com/150" alt="Imagen del equipo 1" />
                                            <strong>Equipo Local</strong>
                                        </div>
                                        <div class="content">
                                            <p class="card-text fs-6 text-center">
                                                <span>@partido.Ubicacion</span>
                                                <strong>VS</strong><br />
                                                <span>@partido.Hora.ToString("hh:mm tt")</span>
                                                <span>@partido.Fecha.ToString("MMMM dd")</span>
                                            </p>
                                        </div>
                                        <div class="image-container">
                                            <img src="https://via.placeholder.com/150" alt="Imagen del equipo 2" />
                                            <strong>Equipo Visitante</strong>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                    <!-- Fin Cards -->
                </div>
            </div>

            <!-- Columa de noticias -->
            <div class="col-md-4 p-3">
                <!-- cards -->
                <div class="container-fluid p-3 border border-dark mb-3">
                    @foreach (var noticia in Model.Noticias)
                    {
                        <div class="card rounded-0 mb-3">
                            <div class="ratio ratio-16x9">
                                <iframe src="https://www.youtube.com/embed/DgdD5rUozew?si=O1REZp9SKbyK84uh" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" referrerpolicy="strict-origin-when-cross-origin" allowfullscreen></iframe>
                            </div>
                            <div class="card-body">
                                <h5 class="card-title">@noticia.Titulo</h5>
                                <p class="card-text">
                                    @noticia.Contenido
                                </p>
                                <p class="card-text"><small class="text-muted">@noticia.FechaPublicacion.ToString("MMMM dd, yyyy")</small></p>
                            </div>
                        </div>
                    }
                </div>
                <!--fin cards -->
            </div>
        </div>
    </div>
</main>
