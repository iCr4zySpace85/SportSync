@{
    ViewData["Title"] = "SportSyncSoftware Organizador";
}

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />

    <title>SportSyncSoftware Organizador Torneos</title>

    <link href="~/css/app.css" rel="stylesheet" />
    <link href="~/css/sidebar.css" rel="stylesheet" />
    <link href="~/css/styles.css" rel="stylesheet" />
    
    @* <link href="~/css/SideNavbar.css" rel="stylesheet" /> *@
    <link rel="stylesheet" href="~/css/Pn_C.css">

    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600&display=swap"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
      integrity="sha512-..."
    />
  </head>

  <body>
    <div class="wrapper">
      <nav id="sidebar" class="sidebar js-sidebar">
        <div class="sidebar-content js-simplebar">
          <div class="text-center bg-blue sidebar-brand">
            <div class="text-center">
              <div class="text-center">
                <img
                  src="~/img/logo-sportsync.png"
                  class="img-fluid"
                  width="180"
                />
              </div>
            </div>
          </div>

          <ul class="sidebar-nav">
            <li class="sidebar-header">Paginas</li>

            <li class="sidebar-item">
              <a class="sidebar-link" asp-controller="Coach" asp-action="PanelEquipoCoach">
                <i class="align-middle" data-feather="sliders"></i>
                <span class="align-middle">Equipo</span>
              </a>
            </li>

            <li class="sidebar-item active">
              <a class="sidebar-link" asp-controller="Coach" asp-action="partidos">
                <i class="align-middle" data-feather="user"></i>
                <span class="align-middle">Partidos</span>
              </a>
            </li>
            
          </ul>
        </div>
      </nav>

      <div class="main">
        <nav class="navbar navbar-expand navbar-bg">
          <a class="sidebar-toggle js-sidebar-toggle">
            <i class="hamburger align-self-center"></i>
          </a>

          <div class="navbar-collapse collapse">
            <ul class="navbar-nav navbar-align">
              <li class="nav-item dropdown">
                <a
                  class="nav-icon dropdown-toggle d-inline-block d-sm-none"
                  href="#"
                  data-bs-toggle="dropdown"
                >
                  <img
                    src="~/img/user-perfil.png"
                    class="avatar img-fluid rounded me-1"
                    alt="Charles Hall"
                  />
                </a>

                <a
                  class="nav-link dropdown-toggle d-none d-sm-inline-block"
                  href="#"
                  data-bs-toggle="dropdown"
                >
                  <img
                    src="~/img/user-perfil.png"
                    class="avatar img-fluid rounded me-1"
                    alt="Charles Hall"
                  />
                 @if (User.Identity.IsAuthenticated != null)
                  {
                    <span class="text-dark">@User.Identity.Name</span>
                  }
                </a>
                <div class="dropdown-menu dropdown-menu-end">
                  <div class="dropdown-divider"></div>

                  <a asp-action="CerrarSesion" asp-controller="Home" class="dropdown-item text-danger">
                    <i  class="align-middle me-1" data-feather="log-out"></i
                    >Cerrar sesión</a>
                </div>
              </li>
            </ul>
          </div>
        </nav>

        <main class="content">
          <div class="container-fluid p-0">
          
          <div id="rolesContenido" class="contenido"> 
          <div class="card"> 
            <div class="card-body">
                <div class="cardtble">
                    <h2>Partidos Pendientes</h2><br>
                    <table id="pending-matches" class="matches-table">
                      <thead>
                        <tr>
                          <th>Partido</th>
                          <th>Fecha</th>
                          <th>Hora</th>
                          <th>Locación</th>
                        </tr>
                      </thead>
                      <tbody>
                        <!-- Aquí se generarán las filas de partidos pendientes dinámicamente -->
                      </tbody>
                    </table>
                    <div class="pagination">
                      <div class="pagination-menu">
                        <!-- Aquí se generará el menú de paginación -->
                      </div>
                    </div>
                  </div>
                  
                  <div class="cardtble">
                    <h2>Partidos Finalizados</h2><br>
                    <table id="finished-matches" class="matches-table">
                      <thead>
                        <tr>
                          <th>Partido</th>
                          <th>Fecha</th>
                          <th>Hora</th>
                          <th>Locación</th>
                        </tr>
                      </thead>
                      <tbody>
                        <!-- Aquí se generarán las filas de partidos finalizados dinámicamente -->
                      </tbody>
                    </table>
                    <div class="pagination">
                      <div class="pagination-menu">
                        <!-- Aquí se generará el menú de paginación -->
                      </div>
                    </div>
                  </div>
                  
            </div>
          </div>
        </div>
            
            
          </div>
        </main>
        
      </div>
    </div>

    <script src="~/js/app.js"></script>
    <script src="~/js/mostrarJ.js"></script>
    <script src="~/js/tablas.js"></script>
    <script src="~/js/Pn_C.js"></script>

    <!-- ====== ionicons ======= -->
    <script
      type="module"
      src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"
    ></script>
    <script
      nomodule
      src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"
    ></script>
    
  </body>
</html>
