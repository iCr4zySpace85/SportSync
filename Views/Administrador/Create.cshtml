 <div class="container">   
  <div class="col-md-12 col-lg-12">

     <div class="py-5 text-center">
            <h2>Crear Usuario</h2>
    </div>
        <form asp-action="Create" method="post" class="needs-validation" novalidate>
          <div class="row g-3">

            <div class="col-sm-4">
              <label for="firstName" class="form-label">Nombre</label>
              <input asp-for="Nombre" class="form-control" required/>
              <span asp-validation-for="Nombre" class="text-danger"></span>
              <div class="invalid-feedback">
                Valid first name is required.
              </div>
            </div>

            <div class="col-sm-4">
              <label for="lastName" class="form-label">Apellido Paterno</label>
              <input asp-for="ApPaterno" class="form-control" />
              <span asp-validation-for="ApPaterno" class="text-danger"></span>
            </div>

            <div class="col-sm-4">
              <label for="lastName" class="form-label">Apellido Materno</label>
              <input asp-for="ApMaterno" class="form-control" />
              <span asp-validation-for="ApMaterno" class="text-danger"></span>
            </div>

            <div class="col-3">
              <label for="email" class="form-label">Correo</label>
              <input asp-for="Correo" class="form-control" />
              <span asp-validation-for="Correo" class="text-danger"></span>
            </div>

            <div class="col-sm-3">
              <label for="lastName" class="form-label">Contraseña</label>
              <input asp-for="Pass" class="form-control" />
              <span asp-validation-for="Pass" class="text-danger"></span>
            </div>

            <div class="col-sm-3">
              <label for="lastName" class="form-label">Número de Celular</label>
              <input asp-for="NombreCelular" class="form-control" />
              <span asp-validation-for="NombreCelular" class="text-danger"></span>
            </div>

            <div class="col-md-3">
              <div class="form-group">
                <label for="state" class="form-label">Asignar Rol</label>
                <select asp-for="IdRol" class="form-control form-select">
                    <option value="1">Administrador</option>
                    <option value="2">Organizador</option>
                    <option value="3">Coach</option>
                    <option value="4">Árbitro</option>
                    <option value="5">Contador</option>
                </select>
                <span asp-validation-for="IdRol" class="text-danger"></span>
                </div>
            </div>
          </div>

          <div class="text-center">
            <button class="btn btn-primary btn-lg mt-2 button-submit" onclick="window.location.href='@Url.Action("Index", "Administrador")';" type="submit">Ver usuarios</button>
            <button class="btn btn-primary btn-lg mt-2 button-exit" type="submit">Crear Usuario</button>
          </div>
          
        </form>
  </div>
</div> 
