@model SportSync.ViewModels.UsuariosViewModel
@{
    ViewData["Title"] = "SportSyncSoftware Organizador";
}

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />

    <title>SportSyncSoftware Organizador Torneos</title>

    <link href="~/css/app.css" rel="stylesheet" />
    <link href="~/css/sidebar.css" rel="stylesheet" />
    <link href="~/css/styles.css" rel="stylesheet" />

    @* <link href="~/css/SideNavbar.css" rel="stylesheet" /> *@
    <link rel="stylesheet" href="~/css/ConteL.css" />
    <link rel="stylesheet" href="~/css/roles.css">
    <link rel="stylesheet" href="~/css/permisos.css">

    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
        integrity="sha512-..." />
</head>

<body>
    <div class="wrapper">
        <nav id="sidebar" class="sidebar js-sidebar">
            <div class="sidebar-content js-simplebar">
                <div class="text-center bg-blue sidebar-brand">
                    <div class="text-center">
                        <div class="text-center">
                            <img src="~/img/logo-sportsync.png" class="img-fluid" width="180" />
                        </div>
                    </div>
                </div>

                <ul class="sidebar-nav">
                    <li class="sidebar-header">Paginas</li>

                    <li class="sidebar-item active">
                        <a class="sidebar-link" asp-controller="Administrador" asp-action="Index">
                            <i class="align-middle" data-feather="sliders"></i>
                            <span class="align-middle">Usuarios</span>
                        </a>
                    </li>@* 

                    <li class="sidebar-item">
                        <a class="sidebar-link" asp-controller="Administrador" asp-action="roles">
                            <i class="align-middle" data-feather="user"></i>
                            <span class="align-middle">Roles</span>
                        </a>
                    </li> *@

                </ul>
            </div>
        </nav>

        <div class="main">
            <nav class="navbar navbar-expand navbar-bg">
                <a class="sidebar-toggle js-sidebar-toggle">
                    <i class="hamburger align-self-center"></i>
                </a>

                <div class="navbar-collapse collapse">
                    <ul class="navbar-nav navbar-align">
                        <li class="nav-item dropdown">
                            <a class="nav-icon dropdown-toggle d-inline-block d-sm-none" href="#"
                                data-bs-toggle="dropdown">
                                <img src="~/img/user-perfil.png" class="avatar img-fluid rounded me-1"
                                    alt="Charles Hall" />
                            </a>

                            @* <a class="nav-link dropdown-toggle d-none d-sm-inline-block" href="#"
                                data-bs-toggle="dropdown">
                                <img src="~/img/user-perfil.png" class="avatar img-fluid rounded me-1"
                                    alt="Charles Hall" />
                                @if (User.Identity.IsAuthenticated != null)
                                {
                                    <span class="text-dark">@User.Identity.Name</span>
                                }
                            </a> *@
                            @* <div class="dropdown-menu dropdown-menu-end">
                                <div class="dropdown-divider"></div> *@

                                @* <form asp-action="Logout" asp-controller="Home" method="post">
                                    <button type="submit" class="dropdown-item text-danger">
                                        <i class="align-middle me-1" data-feather="log-out"></i>Cerrar sesión
                                    </button>
                                </form> *@

                                @await Html.PartialAsync("~/Views/Shared/Partials/_BtnCerrarSesion.cshtml")

                            @* </div> *@
                        </li>
                    </ul>
                </div>
            </nav>

            <main class="content">
                <div class="container-fluid p-0">

                    <img src="~/img/user-perfil.png" class="avatar img-fluid rounded me-1"
                         alt="Charles Hall" />
                    @if (User.Identity.IsAuthenticated != null)
                    {
                        <span class="text-dark">@User.Identity.Name</span>
                    }

                    <br />


                    <h1 class="tittleL">Lista de usuarios</h1> <br>
                    <div class="card-header">
                        <form class="form">
                            <button>
                                <svg width="17" height="16" fill="none" xmlns="http://www.w3.org/2000/svg" role="img"
                                    aria-labelledby="search">
                                    <path
                                        d="M7.667 12.667A5.333 5.333 0 107.667 2a5.333 5.333 0 000 10.667zM14.334 14l-2.9-2.9"
                                        stroke="currentColor" stroke-width="1.333" stroke-linecap="round"
                                        stroke-linejoin="round"></path>
                                </svg>
                            </button>
                            <input class="input" placeholder="Buscar" required="" type="text">
                            <button class="reset" type="reset">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24"
                                    stroke="currentColor" stroke-width="2">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12">
                                    </path>
                                </svg>
                            </button>
                        </form>
                    </div>
                    <br>
                    <div id="CardTbla" class="card">
                        <div class="card-body">
                            <div class="table-container">
                                <table class="custom-table">
                                    <thead>
                                        <tr>
                                            <th>Usuario</th>
                                            <th>Rol</th>
                                            <th>Numero Telefónico</th>
                                            <th>Fecha de Creación</th>
                                            <th>Acciones</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var usuario in Model.Usuarios)
                                        {
                                            <tr>
                                                 <td>@usuario.Nombre</td>
                                                <td>@Model.Roles[usuario.IdRol]</td>
                                                <td>@usuario.NombreCelular</td>
                                                <td>@usuario.FechaCreacion</td>
                                                <td>
                                                    <button class="edit-btn">Editar</button>
                                                    <button class="delete-btn">Eliminar</button>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                                <div class="pagination">
                                    <button id="prevPageBtn">&lt;</button>
                                    <span id="pageNumbers"></span>
                                    <button id="nextPageBtn">&gt;</button>
                                </div>
                                <!-- Enlace a la nueva vista Create -->
                                <a href="@Url.Action("Create", "Administrador")" class="new-user-btn">
                                    <ion-icon name="person-add-outline"></ion-icon> Nuevo Usuario
                                </a>





                            </div>
                            

                            <br><br>
                        </div>
                    </div>
                    <br><br>

                </div>
        </div>
        </main>

    </div>
    </div>

    <script src="~/js/app.js"></script>
    <script src="~/js/mostrarJ.js"></script>
    <script src="~/js/tablas.js"></script>

    <!-- ====== ionicons ======= -->
    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>




</body>

</html>